<configuration> 
    <system.webServer> 
        <handlers> 
            <add name="iisnode" path="app.js" verb="*" modules="iisnode" /> 
        </handlers>
        <rewrite> 
            <rules> 
                <rule name="myapp"> <match url="/*" /> 
                <action type="Rewrite" url="app.js" /> 
                </rule> 
            </rules> 
            
        </rewrite>
   
        <security>
            <requestFiltering>
              <hiddenSegments>
                <add segment="node_modules" />
              </hiddenSegments>
            </requestFiltering>
        </security> 
    </system.webServer>     
</configuration>


